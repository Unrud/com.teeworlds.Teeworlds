{
    "app-id": "com.teeworlds.Teeworlds",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--persist=.teeworlds",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio"
     ],
    "command": "teeworlds",
    "rename-icon": "teeworlds",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/lua5.3/lua-5.3.2.json",
        "shared-modules/glu/glu-9.0.0.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        {
            "name": "bam",
            "no-autogen": true,
            "no-parallel-make": true,
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/matricks/bam/archive/v0.5.0.tar.gz",
                    "sha256": "16c0bccb6c5dee62f4381acaa004dd4f7bc9a32c10d0f2a40d83ea7e2ae25998"
                },
                {
                    "type": "patch",
                    "path": "bam-destdir.patch"
                }
            ]
        },
        {
            "name": "icoutils",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://savannah.nongnu.org/download/icoutils/icoutils-0.31.1.tar.bz2",
                    "sha256": "26e29d3c78f25d4cdf402501ac0414c51a9a092daebf6c9dee3b837dee693093"
                }
            ]
        },
        {
            "name": "teeworlds",
            "buildsystem": "simple",
            "build-commands": [
                "bam -a -v release",
                "install -Dm755 teeworlds /app/bin/teeworlds",
                "install -Dm755 teeworlds_srv /app/bin/teeworlds_srv",
                "cp -a data /app/share/teeworlds",
                "install -Dm644 com.teeworlds.Teeworlds.desktop /app/share/applications/com.teeworlds.Teeworlds.desktop",
                "install -Dm644 com.teeworlds.Teeworlds.appdata.xml /app/share/appdata/com.teeworlds.Teeworlds.appdata.xml",
                "mkdir -p icotmp",
                "icotool -x -o icotmp other/icons/Teeworlds.ico",
	        "for s in 16 24 32 48 128 256; do install -Dm644 icotmp/Teeworlds_*_${s}x${s}x32.png /app/share/icons/hicolor/${s}x${s}/apps/teeworlds.png; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/teeworlds/teeworlds/archive/0.6.4-release.tar.gz",
                    "sha256": "831afdea9e343cd712382c74b941c6c14adfb9192d32504022b41c2abbb910d7"
                },
                {
                    "type": "patch",
                    "path": "teeworlds-bam-0.5.patch"
                },
                {
                    "type": "patch",
                    "path": "teeworlds-set-data-dir.patch"
                },
                {
                    "type": "file",
                    "path": "com.teeworlds.Teeworlds.desktop"
                },
                {
                    "type": "file",
                    "path": "com.teeworlds.Teeworlds.appdata.xml"
                }
            ]
        }
    ]
}
